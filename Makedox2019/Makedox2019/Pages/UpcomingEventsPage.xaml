<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="Makedox2019.Pages.UpcomingEventsPage"
             NavigationPage.HasNavigationBar="False">
    <AbsoluteLayout>


        <StackLayout
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" 
            VerticalOptions="Start">
            <Grid 
                BackgroundColor="White" 
                VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Image
                   Grid.Row="0"
                   Source="testbackground.png"/>
                
                <ListView 
                    x:Name="eventList"
                    Grid.Row="1"
                    BackgroundColor="White"
                    SelectionMode="None"
                    HasUnevenRows="True"
                    VerticalOptions="FillAndExpand"  
                    ItemsSource="{Binding UpComingEvents}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout 
                                    Orientation="Vertical" 
                                    HorizontalOptions="FillAndExpand">

                                    <StackLayout 
                                        Orientation="Horizontal"
                                        Margin="0,10,0,0">
                                        <ff:CachedImage 
                                            Source="{Binding LogoImage}" 
                                            WidthRequest="70"
                                            HeightRequest="70"
                                            HorizontalOptions="Start"/>

                                        <StackLayout
                                            Orientation="Vertical" 
                                            HorizontalOptions="FillAndExpand">

                                            <StackLayout Orientation="Horizontal" Margin="0,0,0,10">
                                                <Label 
                                                    Text="{Binding Title}" 
                                                    FontSize="Large"
                                                    TextColor="Black"/>
                                            </StackLayout>

                                            <StackLayout Orientation="Horizontal">
                                                <ff:CachedImage 
                                                    Source="saat" 
                                                    WidthRequest="25"
                                                    HeightRequest="25"
                                                    HorizontalOptions="Start"/>

                                                <Label 
                                                    Text="{Binding StartTime}"
                                                    FontSize="Medium"
                                                    FontAttributes="Bold"
                                                   />
                                            </StackLayout>

                                            <StackLayout Orientation="Horizontal">
                                                <ff:CachedImage 
                                                    Source="loc" 
                                                    WidthRequest="25"
                                                    HeightRequest="25"
                                                    HorizontalOptions="Start"/>

                                                <Label 
                                                    Text="{Binding Location}"
                                                    FontSize="Medium"
                                                    FontAttributes="Bold"
                                                   />
                                            </StackLayout>
                                            
                                        </StackLayout>
                                    </StackLayout>


                                    <!--<StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer 
                                                Command="{Binding BindingContext.MainProductSelectedCommand,Source={x:Reference vendorProductsPage}}"
                                                CommandParameter="{Binding .}"/>
                                    </StackLayout.GestureRecognizers>-->
                                    
                                </StackLayout>
                                
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </StackLayout>

        <Grid  
            IsVisible="False"
            BackgroundColor="#f7b217"
            HeightRequest="50"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" 
            VerticalOptions="EndAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0"
                   Source="home1.png"
               HeightRequest="50"
               WidthRequest="50"
                   />
    

            <Image Grid.Column="1"
                   Source="timeline.png"
                    HeightRequest="50"
               WidthRequest="50"
                   >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToTimeLinePageCommand}" />
                </Image.GestureRecognizers>
            </Image>
            
            <Image Grid.Column="2"
                   Source="films.png"
                    HeightRequest="50"
               WidthRequest="50"
                  >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToFilmsPageCommand}" />
                </Image.GestureRecognizers>
            </Image>
            
            <Image Grid.Column="3"
                   Source="makedox.png"
                    HeightRequest="50"
               WidthRequest="50"
                   >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToMakedoxPageCommand}" />
                </Image.GestureRecognizers>
            </Image>
            
            <Image Grid.Column="4"
                   Source="menu.png"
                    HeightRequest="50"
               WidthRequest="50"
                   >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToMenuPageCommand}" />
                </Image.GestureRecognizers>
            </Image>
            
        </Grid>
    </AbsoluteLayout>

</ContentPage>