<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Makedox2019.Pages.MenuPage"
             NavigationPage.HasNavigationBar="False">
    <AbsoluteLayout>


        <StackLayout
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" 
            Margin="20"
            VerticalOptions="Start">


            <Image Source="info.png" HorizontalOptions="FillAndExpand" HeightRequest="50" Aspect="AspectFill" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToInfoPageCommand}" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="guest.png" HorizontalOptions="FillAndExpand" HeightRequest="50" Aspect="AspectFill" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToGuestPageCommand}" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="venues.png" HorizontalOptions="FillAndExpand" HeightRequest="50" Aspect="AspectFill" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToVenuesPageCommand}" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="tickets.png" HorizontalOptions="FillAndExpand" HeightRequest="50" Aspect="AspectFill" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToTicketsPageCommand}" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="social.png" HorizontalOptions="FillAndExpand" HeightRequest="50" Aspect="AspectFill" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToSocialPageCommand}" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="maps.png" HorizontalOptions="FillAndExpand" HeightRequest="50" Aspect="AspectFill" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToMapsPageCommand}" />
                </Image.GestureRecognizers>
            </Image>

        </StackLayout>

        <Grid 
            IsVisible="False"
            BackgroundColor="#f7b217"
            HeightRequest="50"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" 
            VerticalOptions="EndAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0"
                   Source="home.png"
               HeightRequest="50"
               WidthRequest="50"
                          >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToUpcomingEventsPageCommand}" />
                </Image.GestureRecognizers>
            </Image>


            <Image Grid.Column="1"
                   Source="timeline.png"
                    HeightRequest="50"
               WidthRequest="50">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToFilmsPageCommand}" />
                </Image.GestureRecognizers>
            </Image>


            <Image Grid.Column="2"
                   Source="films.png"
                    HeightRequest="50"
               WidthRequest="50"
                  >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToFilmsPageCommand}" />
                </Image.GestureRecognizers>
            </Image>

            <Image Grid.Column="3"
                   Source="makedox.png"
                    HeightRequest="50"
               WidthRequest="50"
                   >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToMakedoxPageCommand}" />
                </Image.GestureRecognizers>
            </Image>

            <Image Grid.Column="4"
                   Source="menu1.png"
                    HeightRequest="50"
               WidthRequest="50"
                  />


        </Grid>
    </AbsoluteLayout>

</ContentPage>