<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Makedox2019.Pages.MenuPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             IconImageSource="menu_gray.png"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
        <StackLayout
            Margin="20"
            Orientation="Vertical"
            VerticalOptions="Start">

        <StackLayout BackgroundColor="Transparent" HeightRequest="50" HorizontalOptions="FillAndExpand" Orientation="Vertical">
            <Label Text="INFO" Margin="20,14,0,0" FontSize="9" FontAttributes="Bold" TextColor="Black" VerticalOptions="CenterAndExpand">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS" Value="Intro-Regular" />
                        <On Platform="Android" Value="Intro-Regular.otf#Intro-Regular" />
                    </OnPlatform>
                </Label.FontFamily>
            </Label>
            <BoxView HeightRequest="3" BackgroundColor="#d17839" VerticalOptions="EndAndExpand"/>
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToInfoPageCommand}" />
            </StackLayout.GestureRecognizers>
        </StackLayout>


        <StackLayout BackgroundColor="Transparent" HeightRequest="50" HorizontalOptions="FillAndExpand" Orientation="Vertical">
